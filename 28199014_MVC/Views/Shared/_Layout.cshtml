<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title - CAT</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-top:0">
    <section class="navbar navbar-fixed-top custom-navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("🐱CAT😺", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"  style="margin-left:130px">
                    <li>@Html.ActionLink("HomePage", "Index", "Home", new { style = "Font-Size:18px; font-family:sheep sans" })</li>

                    <li>@Html.ActionLink("About", "../Home/About", "Home", new { style = "Font-Size:18px; font-family:sheep sans" })</li>

                    <li>@Html.ActionLink("Contact", "../Home/Contact", "Home", new { style = "Font-Size:18px; font-family:sheep sans" })</li>
                    <li>@Html.ActionLink("Users", "../Users/SearchIndex", "Users", new { style = "Font-Size:18px; font-family:sheep sans" })</li>

                    <li>@Html.ActionLink("Cats", "../Cats/SearchIndex", "Cats", new { style = "Font-Size:18px; font-family:sheep sans" })</li>

                    <li>@Html.ActionLink("Orders", "../Orders/SearchIndex", "Orders", new { style = "Font-Size:18px; font-family:sheep sans" })</li>


                </ul>
            </div>
        </div>
    </section>
        

    <div style="margin-top:0">
        @RenderBody()
        <hr />
        <footer style="padding-bottom:0px;padding-top:0px">
            <div class="container" id="footer">
                <div class="row">
                    

                    <div class="col-md-12 col-sm-12" style="margin-top:50px; margin-bottom:50px">
                       <h2 class="wow bounceIn">🐱CAT😺</h2>
                    </div>
                    <ul class="social-icon">
                        <li><a href="http://users.monash.edu.au/~sgrose/msh/disclaimer.htm" class="fa fa-shield wow fadeIn" data-wow-delay="0.3s" title="monash course disclaimer"></a></li>
                        <li><a href="mailto:xzhe0001@student.monash.edu" class="fa fa-female wow fadeIn" data-wow-delay="0.6s" title="Xuan's Email"></a></li>
                        <li><a href="mailto:ydin0002@student.monash.edu" class="fa fa-male wow fadeIn" data-wow-delay="0.9s" title="Ray's Email"></a></li>
                        <li><a href="https://github.com/RayDia" class="fa fa-github wow fadeIn" data-wow-delay="1.3s" title="Visit Github"></a></li>
                        <li><a href="" target="_blank" class="fa fa-clone wow fadeIn" data-wow-delay="1s" title=""></a></li>
                    </ul>
                    <p>
                        Copyright &copy; 2017 🐱CAT😺

                        | Design: <a rel="nofollow" href="https://github.com/RayDia/" target="_parent">Xuan & Ray</a>
                    </p>
                    <a rel="nofollow" href="~/Acknowledge.aspx" target="_parent">Acknowledge</a>
                </div>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @section scripts{
        <script src="@Url.Content("~/Scripts/jquery_table.js")" type="text/javascript"></script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>
